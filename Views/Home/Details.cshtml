@model Covid19Handbook.Models.News

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutNews.cshtml";
}

<div class="col-lg-12 col-md-12 d-flex align-items-stretch">
    <div class="col-md-12 col-lg-12 icon-boxes d-flex flex-column align-items-stretch justify-content-center">
        <h4><a href="~/Home/details/@Model.Id">@Model.Title</a></h4>
        <p>
            Tác giả: <span>@Model.Author</span>,
            Ngày đăng: <span>@Model.Date</span>
        </p>
        <p>@Html.Raw(HttpUtility.HtmlDecode(Model.Content))</p>

        <p>
            @Html.ActionLink("Trở về", "News")
        </p>
    </div>

</div>
@section heading1
{
    <span>Tin tức Covid19</span>
}
